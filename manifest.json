{
  "name": "Markdown Viewer",
  "short_name": "MD Viewer",
  "description": "Lightweight markdown file viewer",
  "scope": "/markdown-viewer/",
  "start_url": "/markdown-viewer/",
  "display": "standalone",
  "background_color": "#0d1117",
  "theme_color": "#0d1117",
  "orientation": "any",
  "icons": [
    {
      "src": "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Crect width='100' height='100' rx='20' fill='%23238636'/%3E%3Ctext x='50' y='70' font-size='60' text-anchor='middle' fill='white' font-family='monospace'%3EMD%3C/text%3E%3C/svg%3E",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "/markdown-viewer/",
      "accept": {
        "text/markdown": [".md", ".markdown"],
        "text/plain": [".md", ".markdown"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
